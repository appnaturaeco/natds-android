<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.natura.android.sample"
    android:sharedUserId="com.natura.android.designsystem.uid">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BrandSelectorActivity"
            android:theme="@style/SplashTheme"/>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".tokens.ElevationActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".tokens.BorderRadiusActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".tokens.SizeActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".tokens.OpacityActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".tokens.SpacingActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".tokens.TypographyActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".components.AppBarActivity"
            android:theme="@style/Theme.Natura.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".components.BadgeActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".components.DialogActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".patterns.ErrorActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".patterns.LogoActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".components.TextFieldActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".components.SubmenuActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".components.SelectionControlActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".components.ExpandableNavigationViewActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".components.MenuActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".tokens.icons.IconActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".tokens.icons.DrawableActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".components.ProgressIndicatorActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".components.ValueTextHighlightActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".components.ButtonActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".components.ExpansionPanelActivity"
            android:theme="@style/Theme.Natura.Light" />
        <activity
            android:name=".tokens.ColorsActivity"
            android:theme="@style/Theme.Natura.Light"/>
        <activity
            android:name=".components.ShortcutActivity"
            android:theme="@style/Theme.Natura.Light"/>
        <activity
            android:name=".components.TagActivity"
            android:theme="@style/Theme.Natura.Light"/>
        <activity
            android:name=".components.IconButtonActivity"
            android:theme="@style/Theme.Natura.Light"/>
    </application>

</manifest>